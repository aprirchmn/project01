model RefreshToken {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  
  id_siswa   Int?
  siswa      siswa?   @relation(fields: [id_siswa], references: [id_siswa])
  id_guru    Int?
  guru       guru?    @relation(fields: [id_guru], references: [id_guru])
  
  @@index([id_siswa])
  @@index([id_guru])
}
