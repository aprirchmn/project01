model hasil_ujian {
  id_hasil_ujian Int       @id @default(autoincrement())
  id_siswa       Int       @unique
  id_ujian       Int       @unique
  nilai          Float
  siswa          siswa     @relation(fields: [id_siswa], references: [id_siswa])
  ujian          ujian     @relation(fields: [id_ujian], references: [id_ujian])
  jawaban        jawaban[]
}