enum Role {
  SUPER_ADMIN
  GURU
  SISWA
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  role       Role
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  guru          guru?
  siswa         siswa?
  refreshTokens RefreshToken[]
}
